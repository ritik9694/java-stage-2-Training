<?xml version="1.0" encoding="UTF-8"?>

 <beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd">
					
	<bean id="bmw" class="com.cognizant.spring.core.bean.Car">
	  <property name="model" value="B M W"/>
	  <property name="cost" value="6635652"/>
	</bean>	
	
	<bean id="audi" class="com.cognizant.spring.core.bean.Car">
	  <property name="model" value="audi"/>
	  <property name="cost" value="757547658"/>
	</bean>	
	
	<bean id="ritik" class="com.cognizant.spring.core.bean.Customer">
	  <constructor-arg value="ritik kumar"/>
	  <constructor-arg ref="bmw"/>
	</bean>	
	
</beans>						
package com.cognizant.security.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Service;

import com.cognizant.security.model.MyUserDetails;
import com.cognizant.security.model.Users;
import com.cognizant.security.repo.MyUserRepositry;

@Service
public class MyUserDetailsService implements UserDetailsService {
	/// need repositry;load from repo in service

	@Autowired
	private MyUserRepositry myUserRepositry;

	public void saveUser() {
		Users user = new Users();
		user.setId(1);
		user.setUsername("ritik");
		user.setPassword("1234"); //------------> encode password
		myUserRepositry.save(user);
	}

	@Override
	public UserDetails loadUserByUsername(String username) throws UsernameNotFoundException {
		// TODO Auto-generated method stub
		Users user = myUserRepositry.findByUsername(username);
		if (user == null) {
			System.out.println("user Not Found");
			throw new UsernameNotFoundException("user not found");
		}
		return new MyUserDetails(user);
	}

}
